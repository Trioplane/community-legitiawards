class FontTransition:
    def __init__(self, id):
        self.id = id

        providers = []

        for i in range(1,41):
            providers.append({
                "type": "bitmap",
                "file": f"cla:font/screen/transition/{self.id}/{i}.png",
                "height": 256,
                "ascent": 128,
                "chars": [chr(int(f"E0{i:02d}", 16))],
            })

        font f"cla:screen/transition/{self.id}" {
            "providers": providers
        }